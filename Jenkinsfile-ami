pipeline {
  agent any
 
  tools {nodejs "node"}
 
  stages {
    stage('Packer build script') {
        steps {
           step([  $class: 'CopyArtifact',
                  filter: 'bundle.zip',
                  fingerprintArtifacts: true,
                  projectName: 'node-baas'
            ])
            unzip zipFile: 'bundle.zip', dir: './bundle'
            sh 'packer build bundle/.pipeline/packer.json'
        }
    }
  }
}
